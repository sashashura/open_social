/**
 * Added new Simple HTML format.
 */
function social_editor_update_11401(): void {
  $configs = [
    'filter.format.simple_html',
    'editor.editor.simple_html',
  ];
  /** @var \Drupal\Core\Config\StorageInterface $config_storage */
  $config_storage = \Drupal::service('config.storage');
  $config_path = \Drupal::service('extension.list.module')->getPath('social_editor') . '/config/static/';
  $source = new FileStorage($config_path);

  foreach ($configs as $config) {
    $config_storage->write($config, (array) $source->read($config . '_11401'));
  }
}
